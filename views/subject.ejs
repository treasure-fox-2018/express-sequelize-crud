<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1><%= title %></h1>
      <table style="width:100%">
        <tr>
          <th>Subject</th>
          <th>Options</th>
        </tr>
        <% subjects.forEach(subject =>{%>
        <tr>
          <td><%= subject.name %></td>
          <td><a href="/subject/edit/<%= subject.id%>">Edit</a></td>
          <td><a href="/subject/delete/<%= subject.id%>">Delete</a></td>
        </tr>
        <%})%>
      </table>
      <br>
      <button type="button" name="button" onclick="window.location.href='/subject/add'">Add Subject</button>
  </body>
</html>
