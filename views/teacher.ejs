<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1><%= title %></h1>
      <table style="width:100%">
        <tr>
          <th>Id</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Options</th>
        </tr>
        <% teachers.forEach(teacher =>{%>
        <tr>
          <td><%= teacher.id %></td>
          <td><%= teacher.first_name %></td>
          <td><%= teacher.last_name %></td>
          <td><%= teacher.email %></td>
          <td><a href="/teacher/edit/<%= teacher.id%>">Edit</a></td>
          <td><a href="/teacher/delete/<%= teacher.id%>">Delete</a></td>
        </tr>
        <%})%>
      </table>
      <br>
      <button type="button" name="button" onclick="window.location.href='/teacher/add'">Add Teacher</button>
  </body>
</html>
