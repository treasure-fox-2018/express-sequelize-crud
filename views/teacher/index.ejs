<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- <link rel="icon" href="../../../../favicon.ico"> -->

    <title>Teachers Page</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/css/style.css"> 
  </head>

  <body>

    <nav class="navbar navbar-expand-md navbar-dark bg-info fixed-top">
      <a class="navbar-brand" href="#">TFOX SCHOOL</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/teachers">Teacher</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/students">Student</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/subjects">Subject</a>
          </li>
        </ul>
      </div>
    </nav>

    <main role="main" class="container">

      <div class="content">
        <h2>Teachers Data</h2>
        <a class="btn btn-sm btn-info " href="/teachers/add" role="button" >Add Teacher</a>

        <table class="table mt-5 table-striped">
          <thead>
            <tr>
              <th scope="col">Id</th>
              <th scope="col">First Name</th>
              <th scope="col">Last Name</th>
              <th scope="col">Email</th>
              <th scope="col">Option</th>
            </tr>
          </thead>
          <tbody>
            <% dataTeachers.forEach(teacher => { %>
              <tr>
                  <th scope="row"><%= teacher.id %></th>
                  <td><%= teacher.first_name %></td>
                  <td><%= teacher.last_name %></td>
                  <td><%= teacher.email %></td>
                  <td>
                    <a class="text-info" href="/teachers/edit/<%= teacher.id%>" >edit</a>
                    <span>|</span>
                    <a class="text-info" href ="" data-toggle="modal" data-target="#deleteModal<%= teacher.id%>" >delete</a>
                  </td>
                      <!-- Modal -->
                  <div class="modal" id="deleteModal<%= teacher.id%>" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel<%= teacher.id%>" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="deleteModalLabel<%= teacher.id%>">Warning !!!</h5>
                          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                          </button>
                        </div>
                        <div class="modal-body text-left ml-4" text>
                          <p>Are you sure to delete this teacher data</p>
                          <p>id : <%= teacher.id%></p>
                          <p>first_name : <%= teacher.first_name%></p>
                          <p>last_name : <%= teacher.last_name%></p>
                          <p>email : <%= teacher.email%></p>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                          <button type="button" class="btn btn-primary"><a href="/teachers/delete/<%= teacher.id%>" style="color:white; text-decoration: none;">OK</a></button>
                        </div>
                      </div>
                    </div>
                  </div>
                </tr>
            <% })%>
          </tbody>
        </table>


      </div>


    </main><!-- /.container -->

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </body>
</html>

