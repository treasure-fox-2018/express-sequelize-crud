<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1><%= title %></h1>
      <table style="width:100%">
        <tr>
          <th>Id</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Options</th>
        </tr>
        <% students.forEach(student =>{%>
        <tr>
          <td><%= student.id %></td>
          <td><%= student.first_name %></td>
          <td><%= student.last_name %></td>
          <td><%= student.email %></td>
          <td><a href="/student/edit/<%= student.id%>">Edit</a></td>
          <td><a href="/student/delete/<%= student.id%>">Delete</a></td>
        </tr>
        <%})%>
      </table>
      <br>
      <button type="button" name="button" onclick="window.location.href='/student/add'">Add Student</button>
  </body>
</html>
